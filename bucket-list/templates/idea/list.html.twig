{% extends 'layout.html.twig' %}

{% block title %} <h1>La liste de vos envies</h1> {% endblock %}

{% block main %}
{% for idea in ideas %}
    <ul>
        <a class="liste_ideas" href="{{ path('idea_detail', {'id':idea.id}) }}"> {{ idea.title }} </a>
        <p class="category"> category : {{ idea.category.name }}</p>
    </ul>

{% endfor %}
{% endblock %}